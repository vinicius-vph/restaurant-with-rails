<div class="container">
<h3>Esses s√£o seus produtos cadrastados</h3>

<th><%= link_to 'Novo Produto', new_product_path, class:"function-button add"%></th>
<table class="products">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
    </tr>
  </thead>
  <tbody>

    <% current_user.restaurant.products.each do |product| %>
      <tr>
        <th><%= product.name %></th>
        <th><%= product.value %></th>
        <th><%= link_to 'Editar', edit_product_path(product.id), class:"function-button edit" %></th>
        <th><%= link_to 'Deletar', current_user.restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class:"function-button delete" %></th>
      </tr>

    <% end %>
  </tbody>
</table>
</div>